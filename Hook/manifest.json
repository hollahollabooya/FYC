{
  "manifest_version": 2,

  "name": "Freed Youtube Comments",
  "description": "This extension embeds Reddit comments into where Youtube comments would be.",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },


  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/*"],
      "js": ["jquery-2.2.0.min.js", "./lib/snuownd.js", "./Assets/RedditSearch.js", "./Assets/CommentSection.js", "./Assets/reddit_comment.js", "reddit_query.js"],
      "css": ["./Assets/CommentSection.css"]
    }
  ],

  "permissions": [
    "tabs",
    "https://ajax.googleapis.com/"
  ],

  "web_accessible_resources": [
    "Assets/Images/reddit_icons.png"
  ]
}
